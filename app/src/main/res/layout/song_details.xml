<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/PageSongDetails"
        android:text="@string/SongName"
        android:textSize="@dimen/sizeofText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/PageSongDetails">

        <TextView
            android:id="@+id/songartist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SongArtist"
            android:textSize="@dimen/sizeofText" />

        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/PageSongDetails"
            android:layout_marginStart="@dimen/PageSongDetails"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/songduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/PageSongDetails"
            android:layout_marginStart="@dimen/PageSongDetails"
            android:text="@string/SongDuration"
            android:textSize="@dimen/sizeofText" />
    </LinearLayout>


</LinearLayout>